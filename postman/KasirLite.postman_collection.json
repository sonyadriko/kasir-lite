{
  "info": {
    "name": "Kasir Lite API",
    "description": "Complete API collection for Kasir Lite POS system",
    "version": "1.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login (Get Token)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"cashier@demo.local\",\n    \"password\": \"password\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/login",
              "host": ["{{base_url}}"],
              "path": ["api", "login"]
            },
            "description": "Login to get authentication token. Use demo credentials from seeder."
          },
          "response": []
        },
        {
          "name": "Get User Info",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/user",
              "host": ["{{base_url}}"],
              "path": ["api", "user"]
            },
            "description": "Get current authenticated user information"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Products",
      "item": [
        {
          "name": "Get Products",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/products",
              "host": ["{{base_url}}"],
              "path": ["api", "products"]
            },
            "description": "Get paginated list of active products"
          },
          "response": []
        },
        {
          "name": "Search Products by Name",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/products?search=teh",
              "host": ["{{base_url}}"],
              "path": ["api", "products"],
              "query": [
                {
                  "key": "search",
                  "value": "teh"
                }
              ]
            },
            "description": "Search products by name or SKU"
          },
          "response": []
        },
        {
          "name": "Search Products by Barcode",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/products?barcode=8901234567890",
              "host": ["{{base_url}}"],
              "path": ["api", "products"],
              "query": [
                {
                  "key": "barcode",
                  "value": "8901234567890"
                }
              ]
            },
            "description": "Find product by barcode"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Sales",
      "item": [
        {
          "name": "Create Sale - Single Item",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"outlet_id\": 1,\n    \"sold_at\": \"2025-09-13T10:15:00\",\n    \"items\": [\n        {\n            \"product_id\": 1,\n            \"price\": 5000,\n            \"qty\": 2,\n            \"discount\": 0\n        }\n    ],\n    \"discount_total\": 0,\n    \"tax_percent\": 10,\n    \"rounding\": 0,\n    \"payments\": [\n        {\n            \"method\": \"CASH\",\n            \"amount\": 11000\n        }\n    ],\n    \"note\": \"Test sale\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/sales",
              "host": ["{{base_url}}"],
              "path": ["api", "sales"]
            },
            "description": "Create a sale with single item and single payment"
          },
          "response": []
        },
        {
          "name": "Create Sale - Multi Item & Payment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"outlet_id\": 1,\n    \"sold_at\": \"2025-09-13T10:15:00\",\n    \"items\": [\n        {\n            \"product_id\": 1,\n            \"price\": 5000,\n            \"qty\": 2,\n            \"discount\": 0\n        },\n        {\n            \"product_id\": 3,\n            \"price\": 15000,\n            \"qty\": 1,\n            \"discount\": 1000\n        }\n    ],\n    \"discount_total\": 1000,\n    \"tax_percent\": 10,\n    \"rounding\": 0,\n    \"payments\": [\n        {\n            \"method\": \"CASH\",\n            \"amount\": 20000\n        },\n        {\n            \"method\": \"QRIS\",\n            \"amount\": 5000\n        }\n    ],\n    \"note\": \"Multi-item sale with discount\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/sales",
              "host": ["{{base_url}}"],
              "path": ["api", "sales"]
            },
            "description": "Create sale with multiple items and payment methods"
          },
          "response": []
        },
        {
          "name": "Create Sale - With Rounding",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"outlet_id\": 1,\n    \"sold_at\": \"2025-09-13T10:15:00\",\n    \"items\": [\n        {\n            \"product_id\": 2,\n            \"price\": 7000,\n            \"qty\": 3,\n            \"discount\": 0\n        }\n    ],\n    \"discount_total\": 0,\n    \"tax_percent\": 10,\n    \"rounding\": -100,\n    \"payments\": [\n        {\n            \"method\": \"CASH\",\n            \"amount\": 23000\n        }\n    ],\n    \"note\": \"Sale with rounding adjustment\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/sales",
              "host": ["{{base_url}}"],
              "path": ["api", "sales"]
            },
            "description": "Create sale with rounding adjustment"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Cash Sessions",
      "item": [
        {
          "name": "Open Cash Session",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"opening_cash\": 200000\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/cash-sessions/open",
              "host": ["{{base_url}}"],
              "path": ["api", "cash-sessions", "open"]
            },
            "description": "Open a new cash session with starting cash amount"
          },
          "response": []
        },
        {
          "name": "Get Active Cash Session",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/cash-sessions/active",
              "host": ["{{base_url}}"],
              "path": ["api", "cash-sessions", "active"]
            },
            "description": "Get current active cash session for the cashier"
          },
          "response": []
        },
        {
          "name": "Close Cash Session",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"closing_cash\": 350000\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/cash-sessions/close",
              "host": ["{{base_url}}"],
              "path": ["api", "cash-sessions", "close"]
            },
            "description": "Close active cash session and calculate variance"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Receipts",
      "item": [
        {
          "name": "View Receipt",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/receipt/1",
              "host": ["{{base_url}}"],
              "path": ["receipt", "1"]
            },
            "description": "View printable receipt for a sale (replace 1 with actual sale ID)"
          },
          "response": []
        }
      ]
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          ""
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          ""
        ]
      }
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000",
      "type": "string"
    },
    {
      "key": "auth_token",
      "value": "",
      "type": "string"
    }
  ]
}